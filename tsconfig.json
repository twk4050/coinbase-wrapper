{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "target": "es6",
        "types": ["node", "jest"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true, // create .d.ts files
        "removeComments": false,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": ["es2017", "dom"],
        "baseUrl": ".",
        "outDir": "lib"
    },
    "include": ["src/**/*", "src/.ts", "test/**.test.ts"],
    "exclude": ["node_modules", "**/node_modules/*", "coverage", "doc"]
}
